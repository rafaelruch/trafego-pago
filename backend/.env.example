# === BANCO DE DADOS ===
DATABASE_URL=postgresql://postgres:senha@db:5432/gestor_trafego

# === META / FACEBOOK ===
META_APP_ID=seu_app_id_aqui
META_APP_SECRET=seu_app_secret_aqui
# URL de callback OAuth (ajuste para seu domínio em produção)
META_REDIRECT_URI=https://seudominio.com/api/auth/callback

# === ANTHROPIC (Claude AI) ===
# Crie sua chave em: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# === SEGURANÇA ===
# Gere com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=troque-por-uma-chave-secreta-forte-aqui

# === CORS (domínios permitidos, separados por vírgula) ===
CORS_ORIGINS=http://localhost:3000,https://seudominio.com

# === N8N / INTEGRAÇÕES EXTERNAS ===
# Chave gerada no painel do app (Configurações → API Keys)
# N8N_API_KEY é gerenciado pelo banco, esta variável é apenas documentação

# === AMBIENTE ===
# development | production
ENVIRONMENT=production
